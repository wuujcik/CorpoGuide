<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/pin_board">


    <ImageView
        android:id="@+id/main_yellow"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sticky_yellow" />

    <TextView
        style="@style/text_note"
        android:text="future forecast"
        app:layout_constraintBottom_toBottomOf="@+id/main_yellow"
        app:layout_constraintEnd_toEndOf="@+id/main_yellow"
        app:layout_constraintStart_toStartOf="@+id/main_yellow"
        app:layout_constraintTop_toTopOf="@+id/main_yellow" />

    <ImageView
        android:id="@+id/main_blue"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_yellow"
        app:srcCompat="@drawable/sticky_blue" />

    <TextView
        style="@style/text_note"
        android:text="get bullshit"
        app:layout_constraintBottom_toBottomOf="@+id/main_blue"
        app:layout_constraintEnd_toEndOf="@+id/main_blue"
        app:layout_constraintStart_toStartOf="@+id/main_blue"
        app:layout_constraintTop_toTopOf="@+id/main_blue" />

    <ImageView
        android:id="@+id/main_green"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_blue"
        app:srcCompat="@drawable/sticky_green" />

    <TextView
        style="@style/text_note"
        android:text="excuse being late"
        app:layout_constraintBottom_toBottomOf="@+id/main_green"
        app:layout_constraintEnd_toEndOf="@+id/main_green"
        app:layout_constraintStart_toStartOf="@+id/main_green"
        app:layout_constraintTop_toTopOf="@+id/main_green" />

    <ImageView
        android:id="@+id/main_pink"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_green"
        app:srcCompat="@drawable/sticky_pink"
        android:visibility="invisible"/>

    <TextView
        style="@style/text_note"
        android:text="ask for salary increase"
        app:layout_constraintBottom_toBottomOf="@+id/main_pink"
        app:layout_constraintEnd_toEndOf="@+id/main_pink"
        app:layout_constraintStart_toStartOf="@+id/main_pink"
        app:layout_constraintTop_toTopOf="@+id/main_pink"
        android:visibility="invisible"/>
</android.support.constraint.ConstraintLayout>